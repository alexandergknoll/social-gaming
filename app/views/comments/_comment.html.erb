<div class="comment">
  <p><%= comment.body %></p>
  <% if comment.user.owned_games.include?(comment.game) %>
    <p class="owner-stamp">
    <%= link_to "#{comment.user.username}", comment.user %> (owns this game)
  <% else %>
    <p class="normal-stamp">
    <%= link_to "#{comment.user.username}", comment.user %>
  <% end %>
    <%= time_ago_in_words(comment.created_at) %> ago
    </p>
</div>

<% if current_user && current_user.is_admin %>
  <%= link_to 'Destroy', [comment.game, comment], method: :delete, data: { confirm: 'Are you sure you want to delete this comment?' } %>
<% end %>
