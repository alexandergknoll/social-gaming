<div>
<%= form_for user do |f| %>
	<ul>
	<li>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</li>

	<li>
		<%= f.label :username %>
		<%= f.text_field :username %>
	</li>

	<li>
		<%= f.label :email %>
		<%= f.email_field :email %>
	</li>

	<li>
		<%= f.label :password %>
		<%= f.password_field :password %>
	</li>
	
	<%= f.submit %>
	</ul>
<% end %>
</div>	