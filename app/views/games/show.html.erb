<div class="container">
  <div class="game-info">
    <h1><%= @game.name %></h1>
    <h3>Average Rating: <%= @game.average_rating %> with <%= @game.ratings.count %> votes.</h3>
    <h3>Number of Players: <%= @game.min_number_of_players %> - <%= @game.max_number_of_players %></h3>
    <h3>Duration: <%= @game.min_duration_of_game %> - <%= @game.max_duration_of_game %> minutes</h3>
    <% @tags.each do |tag| %>
      <%= link_to "#{tag.name}", tag_path(tag) %>
    <% end %>
    <p><%= @game.description %></p>
  </div>

  <div class="add-or-remove-button">
    <% if @owned_game.user == nil %>
      <%= render partial: 'add_game_button', locals: {game: @game} %>
    <% else %>
      <%= form_for @owned_game, url: user_game_path, method: 'delete' do |f| %>
        <%=hidden_field_tag 'game_id', @game.id %>
        <%=f.submit "Remove owned game"%>
      <% end %>
    <% end %>
  </div>

  <div class="comment-form">
    <%= render partial: 'comments/form', locals: {user: current_user, game: @game, comment: @comment} %>
  </div>

  <div class="comments">
    <ul>
      <% @comments.each do |comment| %>
        <li><%= render partial: 'comments/comment', locals: {comment: comment} %></li>
        <br>
      <% end %>
    </ul>
  </div>
</div>
