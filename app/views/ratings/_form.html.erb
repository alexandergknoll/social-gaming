<%= form_for [game, rating], method: :patch do |f| %> 
  <p>
    <% if rating.value %>
      <p>You gave it a rating of <%= rating.value %> out of 5.</p>
    <% end %>
    <%= f.label :value, "Rating:" %>
    <%= f.radio_button :value, :value => 1 %>
    <%= f.radio_button :value, :value => 2 %>
    <%= f.radio_button :value, :value => 3 %>
    <%= f.radio_button :value, :value => 4 %>
    <%= f.radio_button :value, :value => 5 %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>

